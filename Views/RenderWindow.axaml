<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:audit.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="900" d:DesignHeight="600"
        x:Class="audit.Views.RenderWindow"
        Title="Auditer"
        Width="900" Height="500">

  <Canvas>
    <Grid ShowGridLines="False">
      <Grid.RowDefinitions>
        <RowDefinition Height="155"></RowDefinition>
        <RowDefinition Height="700"></RowDefinition>
      </Grid.RowDefinitions>
      
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="400"></ColumnDefinition>
        <ColumnDefinition Width="800"></ColumnDefinition>
      </Grid.ColumnDefinitions>

      <!--Left Side Grid-->
      <!--Quadrant 1-->
      <Rectangle Grid.Column="0" Grid.Row="0" Fill="#A8A4CE"/>
        <StackPanel Grid.Column="0" Grid.Row="0" Spacing="10">
          <TextBlock Text="Name" Margin="10,10,0,0"/>
          <TextBox Height="25" Width="200" HorizontalAlignment="Left" Margin="10,-5,0,0"/>
          <TextBlock Text="Associate ID" Margin="10,10,0,0"/>
          <TextBox PasswordChar="*" Height="25" Width="200" HorizontalAlignment="Left" Margin="10,-5,0,0"/>
        </StackPanel>

      <!--Quadrant 2-->
      <Rectangle Grid.Column="0" Grid.Row="1" Fill="#7A86B6"/>
        <StackPanel Grid.Column="0" Grid.Row="1" Spacing="10" Margin="0,10,0,0">
            <TextBlock Text="Department" Margin="10,10,0,0"/>
            <TextBox Height="25" Width="200" HorizontalAlignment="Left" Margin="10,0,0,0"/>
            <TextBlock Text="Total Counted" Margin="10,0,0,0"/>
            <TextBox Height="25" Width="200" HorizontalAlignment="Left" Margin="10,-5,0,0"/>
            <TextBlock Text="Missing Sensors" Margin="10,0,0,0"/>
            <TextBox Height="25" Width="200" HorizontalAlignment="Left" Margin="10,-5,0,0"/>
            <TextBlock Text="Missing Tickets" Margin="10,0,0,0"/>
            <TextBox Height="25" Width="200" HorizontalAlignment="Left" Margin="10,-5,0,0"/>
            <Button  Grid.Column="0" Grid.Row="1" Background="#495C83" Margin="10,5,0,0">Submit</Button>
          </StackPanel>

      <!--Right Side Grid-->
      <!--Quadrant 3-->
      <Rectangle Grid.Column="1" Grid.Row="0" Fill="#495C83"/>
        <StackPanel Grid.Column="1" Grid.Row="0" Spacing="10">
          
        </StackPanel>
      
      <!--Quadrant 4-->
      <Rectangle Grid.Column="1" Grid.Row="1" Fill="#495C83"/>
        <StackPanel Grid.Column="1" Grid.Row="1" Spacing="10">
          <TextBlock Text="Audited Department: "/>
        </StackPanel>
    </Grid>
  </Canvas>
  
</Window>